<h1>TransCares#show</h1>
<p>Find me in app/views/trans_cares/show.html.erb</p>


<div class="provider-info">
	<p><%= @provider.first_name %> <%= @provider.last_name %></p>
	<p><%= @provider.address %></p>
	<p><%= @provider.role  %></p>
	<%= @provider.phone_number %>
	<%= @provider.waiting_period %>
</div>


  <h3>Reviews for <%= @provider.first_name %></h3>

  <% @provider.reviews.each do |review| %>
    <p>
      <%= review.comment %>
      <br>
      <% if review.user != nil %>
        <em> by <%= review.user.email %></em>
        Added on: <%= review.created_at %>
      <% end %>
    </p>
  <% end %>

  <h4>New Review</h4>

  <%= form_for([@provider, @review]) do |f| %>
    <% if @review.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :comment %><br />
      <%= f.text_area :comment %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>


<div>
	<ul>
		<li><%= link_to 'All Providers', providers_path %></li>
	</ul>
</div>

