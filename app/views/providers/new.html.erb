
<h1>Add a <%= @type.capitalize %></h1>
<br>

<%= form_for @provider do |f| %>
	<% if @provider.errors.any? %>
		<div id="error_explaination">
			<h2><%= pluralize(@provider.errors.count, "error") %> prohibited this form from being submitted</h2>
			<ul>
				<% @provider.errors.full_messages.each do |msg| %>
				<li><%= msg %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>
	<div class="main-form">
		<%= f.hidden_field :type, value: @type %>
		<div>
			<%= f.label :organization_name %>
			<%= f.text_field :organization_name %>
		</div>

		<% unless @type.capitalize == "Organization" %>
			<div>
				<%= f.label :first_name %>
				<%= f.text_field :first_name %>
			</div>
			<div>
				<%= f.label :last_name %>
				<%= f.text_field :last_name %>
			</div>
		<% end %>

		<div>
			<%= f.label :address_line1 %>
			<%= f.text_field :address_line1 %>
		</div>
		<div>
			<%= f.label :address_line2 %>
			<%= f.text_field :address_line2 %>
		</div>
		<div>
			<%= f.label :city %>
			<%= f.text_field :city %>
		</div>
		<div>
			<%= f.label :province %>
			<%= f.text_field :province %>
		</div>
		<div>
			<%= f.label :area_code %>
			<%= f.text_field :area_code %>
		</div>

		<div>
			<%= f.label :phone_number %>
			<%= f.telephone_field :phone_number, :size => 10, :maxlength => 10  %> 
			<!-- can you break up the tele field into multi sections? use JS -->
		</div>
		<div>
			<%= f.label :waiting_period, 'How long did you have to wait to obtain an appointment?' %>
			<%= f.select :waiting_period, [['Select', nil], [' Less than 1 Month', 0], [' 1 Month', 1], ['2 Months', 2], ['3 Months', 3], ['4 Months', 4], ['5 Months', 5], ['6 Months', 6], ['7 Months', 7], ['8 Months', 8], ['9 Months', 9], ['10 Months', 10], ['11 Months', 11], ['12 Months', 12], ['Over 12 Months', 13]] %>
		</div>

	</div>
<%= f.submit %>
<%end%>


