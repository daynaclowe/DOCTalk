<h1>Hello! <%= @user.username %> Welcome to your profile!</h1>

<p> Name: <%= @user.first_name %></p>
<p> Last Name: <%= @user.last_name %></p>
<p> Email: <%= @user.email %></p>

<h4> Your reviews </h4>
<div>
	<% @user.reviews.each do |review| %>
	<li>
		For <%=link_to(review.provider.first_name, provider_path(review.provider))  %> 
		your review is:
		<%=review.comment %>
		<%= link_to 'Edit Review', edit_provider_review_path(review.provider, review) %>
		<%= link_to 'Delete Review', provider_review_path(review.provider, review), method: :delete, data: {confirm: "Are you sure?"}  %>

	</li>
	<% end %>
</div>

<h4>Your Ratings</h4>

<div>
	<% @user.ratings.each do |rating| %>
	<li>
		For <%=link_to(rating.provider.first_name, provider_path(rating.provider))  %> 
		your rating is:
		<%= link_to 'Edit rating', edit_provider_rating_path(rating.provider, rating) %>
	</li>
	<% end %>
	<br>
</div>


<h4> The D.O.C's you have added </h4>

<div>
	<% @providers.each do |provider| %>
		D.O.C: <%= link_to provider.first_name, provider_path(provider) %> | 
		<%= link_to 'Edit this D.O.C', edit_provider_path(provider) %>
		<%= link_to 'Delete this D.O.C', provider, method: :delete, data: {confirm: "Are you sure you want to delete this D.O.C?"}  %>
	<% end %>

	
</div>


<div>
	<br>
	
	<%= link_to "Edit Profile", edit_user_path(@user) %> | 
	<%= link_to "Delete Profile", @user, method: :delete, data: {confirm: "Are you sure you want to delete this user?"}  %>
</div>



